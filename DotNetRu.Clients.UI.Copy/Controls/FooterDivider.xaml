<?xml version="1.0" encoding="UTF-8"?>
<ContentView 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="DotNetRu.Clients.UI.Controls.FooterDivider">
    <ContentView.IsVisible>
        <OnPlatform x:TypeArguments="x:Boolean" Android="false" iOS="true" WinPhone="true"/>
    </ContentView.IsVisible>
    <ContentView.Content>
        <BoxView  
            HorizontalOptions="FillAndExpand" 
            BackgroundColor="{DynamicResource Divider}">
            <BoxView.HeightRequest>
                <OnPlatform x:TypeArguments="x:Double" iOS=".5" Android="1" WinPhone="1"/>
            </BoxView.HeightRequest>
        </BoxView>
    </ContentView.Content>
</ContentView>
